{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "ignorePatterns": [
    "package-lock.json",
    "pnpm-lock.yaml",
    "node_modules",
    "dist",
    ".tanstack",
    ".wrangler",
    "**/routeTree.gen.ts"
  ],
  "semi": true,
  "tabWidth": 2,
  "printWidth": 120,
  "singleQuote": false,
  "trailingComma": "es5",
  "bracketSameLine": true,
  "experimentalTailwindcss": {
    "stylesheet": "./src/_styles/global.css",
    "functions": ["clsx", "cn", "cva", "tw"]
  }
}
